datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // Ensure this is set correctly in your .env file
}

generator client {
  provider = "prisma-client-js"
}

model AsaUser {
  ID                 BigInt   @id @default(autoincrement()) @map("ID")
  UserName           String   @unique @map("UserName") // Marking as unique
  Password           String   @map("Password")
  AccessLevel        String   @map("AccessLevel")
  Owner              String?  @map("Owner")
  PhoneNumber        String?  @map("PhoneNumber")
  SubmitDate         DateTime @map("SubmitDate")
  SubmitTime         DateTime @map("SubmitTime")
  RepresentativeCode String?  @map("RepresentativeCode")

  @@map("asa_users") 
}

model Tank {
  ID                                         BigInt   @id @default(autoincrement()) @map("ID")
  TruckID                                    String  @map("TruckID")
  DriverID                                   String  @map("DriverID")
  TankOwner                                  String  @map("TankOwner")
  TankNumber                                 String  @map("TankNumber")
  TankSerialNumber                           String   @map("TankSerialNumber")
  TankChassisNumber                          String   @map("TankChassisNumber")
  EmployerCompany                            String   @map("EmployerCompany")
  PSITest                                    Boolean  @map("PSITest")
  PSITestDate                                DateTime @map("PSITestDate")
  PsiSealNumber                              String   @map("PsiSealNumber")
  WhiteTest                                  Boolean  @map("WhiteTest")
  WhiteTestDate                              DateTime @map("WhiteTestDate")
  TankAxleType                               String   @map("TankAxleType")
  AirValve                                   Boolean  @map("AirValve")
  DriversSideOfMiddleAndLastAxisABSSensor    Boolean  @map("DriversSideOfMiddleAndLastAxisABSSensor")
  TheRightSideOfTheMiddleAndLastAxisABSSensor Boolean  @map("TheRightSideOfTheMiddleAndLastAxisABSSensor")
  ValveHandle                                Boolean  @map("ValveHandle")
  JackHandle                                 Boolean  @map("JackHandle")
  FireBox                                    Boolean  @map("FireBox")
  Refrigerator                               Boolean  @map("Refrigerator")
  Toolbox                                    Boolean  @map("Toolbox")
  JackBottomLayer                            Boolean  @map("JackBottomLayer")
  JackAxis                                   Boolean  @map("JackAxis")
  LiftAxle                                   Boolean  @map("LiftAxle")
  DrawerInsideTheToolBox                     Boolean  @map("DrawerInsideTheToolBox")
  LongitudinalSideHazardLight                Boolean  @map("LongitudinalSideHazardLight")
  RearHazardLight                            Boolean  @map("RearHazardLight")
  Wiring                                     Boolean  @map("Wiring")
  BumperShieldGuard                          Boolean  @map("BumperShieldGuard")
  ABSDevice                                  Boolean  @map("ABSDevice")
  ABSSerial                                  String   @map("ABSSerial")
  WindBag                                    Boolean  @map("WindBag")
  MammoottySideLight                         Boolean  @map("MammoottySideLight")
  ReflectiveSheet                            Boolean  @map("ReflectiveSheet")
  WaterTank                                  Boolean  @map("WaterTank")
  WaterTankCondition                         String   @map("WaterTankCondition")
  WaterTankType                              String   @map("WaterTankType")
  WaterTankValve                             Boolean  @map("WaterTankValve")
  WaterTankLid                               Boolean  @map("WaterTankLid")
  ParkLockBoxAndWindAdjustmentHandle         Boolean  @map("ParkLockBoxAndWindAdjustmentHandle")
  PipeValveHead                              Boolean  @map("PipeValveHead")
  NumberOfBrassCaps                          String   @map("NumberOfBrassCaps")
  CapsCondition                              String   @map("CapsCondition")
  RoundBottom                                Boolean  @map("RoundBottom")
  KitCondition                               String   @map("KitCondition")
  TiresSerialNumbers                         Json     @map("TiresSerialNumbers")
  TiresBrand                                 Json     @map("TiresBrand")
  TiresCapacityOnTheDriverSide               Json     @map("TiresCapacityOnTheDriverSide")
  TiresCapacityOnThePassengerSide            Json     @map("TiresCapacityOnThePassengerSide")
  RimTypeOnTheDriverSide                     Json     @map("RimTypeOnTheDriverSide")
  RimTypeOnThePassengerSide                  Json     @map("RimTypeOnThePassengerSide")
  FenderOnTheDriverSide                      String   @map("FenderOnTheDriverSide")
  FenderOnThePassengerSide                   String   @map("FenderOnThePassengerSide")
  SlackerOnTheDriverSide                     String   @map("SlackerOnTheDriverSide")
  SlackerOnThePassengerSide                  String   @map("SlackerOnThePassengerSide")
  BalloonStatusOnThePassengerSide            Json     @map("BalloonStatusOnThePassengerSide")
  BalloonStatusOnTheDriverSide               Json     @map("BalloonStatusOnTheDriverSide")
  Barometer                                  String   @map("Barometer")
  AirLoadingAndUnloadingPipe                 String   @map("AirLoadingAndUnloadingPipe")
  Fitting                                    String   @map("Fitting")
  TankBrakeType                              String   @map("TankBrakeType")
  SideWritten                                String   @map("SideWritten")
  Active                                     String   @map("Active")
  TankLocation                               String   @map("TankLocation")
  TankStatus                                 String   @map("TankStatus")
  UnderRepair                                String   @map("UnderRepair")
  FaucetsCondition                           String   @map("FaucetsCondition")
  Testing                                    String   @map("Testing")
  GPS                                        String   @map("GPS")
  GPSUserName                                String   @map("GPSUserName")
  GPSPassword                                String   @map("GPSPassword")
  GPSWebSite                                 String   @map("GPSWebSite")
  GPSAPI                                     String   @map("GPSAPI")
  TankConstructionYearModel                  String   @map("TankConstructionYearModel")
  Supervisor                                 BigInt   @map("Supervisor")
  SubmitDate                                 DateTime @map("SubmitDate")
  RepresentativeCode                         String   @map("RepresentativeCode")
  
  @@map("tanks")
}
